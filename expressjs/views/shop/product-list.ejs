<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Add Product</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include("../layouts/header.ejs") %>
    <main>
      <% if(products.length>0){ %>
      <div class="grid">
        <% for (let pro of products){ %>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= pro.title %></h1>
          </header>
          <div class="card__image">
            <img
              src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png"
              alt="A Book"
            />
          </div>
          <div class="card__content">
            <h2 class="product__price">$ <%= pro.price %></h2>
            <p class="product__description"><%= pro.description %></p>
          </div>
          <div class="card__actions">
            <a href="/products/<%= pro.id %>" class="btn">Details</a>
            <form action="/add-to-cart" method="POST">
              <button class="btn">Add to Cart</button>
            </form>
          </div>
        </article>
        <% } %>
      </div>
      <%} else{ %>
      <p>No product found</p>
      <%} %>
    </main>
  </body>
</html>
